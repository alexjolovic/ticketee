= simple_form_for [@project, @ticket], :html => { :class => 'form-horizontal' } do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg
  = f.input :title, input_html: {class: 'span6'}
  = f.input :description, as: :text, input_html: {class: 'span10', cols: 40, rows: 10}
  = f.button :submit, class: 'btn'
