= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f|
  #error_explanation
    %h2
      = pluralize(@project.errors.count, "error")
      prohibited this foo from being saved:
    %ul
      - @project.errors.full_messages.each do |msg|
        %li= msg
  = f.input :name
  = f.input :description
  = f.button :submit, :class => 'btn'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), project_path(@project), :class => 'btn'

